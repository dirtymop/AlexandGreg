<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dirtymop.myapplication.HomeActivity"
    android:id="@+id/homeLayout"
    android:weightSum="1">

    <!-- Margins for the main layout -->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->


    <!-- Original layout from here down! -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/homeTop"
        android:background="@color/gravelgrey"
        android:layout_weight="0.2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:textColor="@color/lightgray"
            android:textAllCaps="false"
            android:text="tap to Velo"
            android:id="@+id/goToSelectMap"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/homeBottom"
        android:background="@color/lightgray"
        android:layout_weight="0.8"></FrameLayout>
</LinearLayout>
